@page "/hsignup"
@inject NavigationManager NavigationManager

<form>
    <div class="mb-3">
        <label for="hostName" class="form-label">Name</label>
        <input type="text" class="form-control" id="hostName">
    </div>

    <div class="mb-3">
        <label for="hostEmail" class="form-label">Email address</label>
        <input type="email"class="form-control" id="hostEmail">
    </div>

    <div class="mb-3">
        <label for="hostPassword" class="form-label">Password</label>
        <input type="password" class="form-control" id="hostPassword">
    </div>

    <div class="mb-3">
        <label for="hostPhoneNumber" class="form-label">Phone Number</label>
        <input type="text" class="form-control" id="hostPhoneNumber">
    </div>

    <div class="mb-3">
        <label for="hostAddress" class="form-label">Address</label>
        <input type="text" class="form-control" id="hostAddress">
    </div>

    <div class="mb-3">
        <label for="roomCount" class="form-label">Number of Available Rooms</label>
        <input type="number" min="0" class="form-control" id="roomCount">
    </div>

    <div class="mb-3">
        <label for="hostMaxTenants" class="form-label">Max Number of Tenants</label>
        <input type="number" min="0" class="form-control" id="hostMaxTenants">
    </div>

    <div class="mb-3">
        <label for="hostLanguages" class="form-label">Language(s) Spoken</label>
        <input type="text" class="form-control" id="hostLanguages"> <!--CHANGE INPUT TYPE TO SELECT-->
    </div>


    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="hostKids">
        <label class="form-check-label" for="hostKids">Accepting Kids</label>
    </div>

    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="hostFood">
        <label class="form-check-label" for="hostFood">Providing Food</label>
    </div>

    <label for="hostAcceptGender">Gender Preference:</label>
    <div class="form-check form-check-inline" id="hostAcceptGender">
        <input class="form-check-input" type="checkbox" id="hostAcceptMale" value="male">
        <label class="form-check-label" for="hostAcceptMale">Male</label>
    </div>
    <div class="form-check form-check-inline" id="hostAcceptGender">
        <input class="form-check-input" type="checkbox" id="hostAcceptFemale" value="female">
        <label class="form-check-label" for="hostAcceptFemale">Female</label>
    </div>

    <br>
    <button type="submit" @onclick="GoToHPage" class="btn btn-primary">Submit</button>
</form>

@code {

    private void GoToHPage()
    {
        NavigationManager.NavigateTo("hpage");
    }

}