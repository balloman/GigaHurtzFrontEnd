@page "/hpage"
@using GigaHurtz_Frontend.Services
@inject NavigationManager NavigationManager
@inject IApiService ApiService

<!-- Host Information (Card format) -->
<div class="card mb-3" style="max-width: 780;">
    <!-- was 540 -->
    <div class="row g-0">
        <div class="col-md-4">
            <img src=@host.ImageUrl class="img-fluid rounded-start">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@host.Name</h5>
                <p class="card-text">Address: @host.Address Phone: @host.Phone</p>
                <p class="card-text">Email: @host.Email</p>
                <p class="card-text"># of Rooms: @host.AvailableRooms Max Number of Tenants: @host.MaxTenants Languages: @string.Join(", ", host.Languages)</p>
                <p class="card-text">Gender(s): @string.Join(", ", host.GenderPref) Have Kids: @host.Kids Provide Food: @host.Cooks</p>
            </div>
        </div>
    </div>
</div>
<!-- Pending Requests -->
<hr>

<ul class="list-group">
    <li class="list-group-item active">
        <button type="button" class="btn btn-primary">
            <i class="material-icons" @onClick="window.location.href = window.location;">refresh</i>
        </button>
        <h3 style="display: inline">Pending Requests</h3>
    </li>
    @foreach (var request in host.Requests)
    {
        var refugee = ApiService.GetRefugee(request).Result;

            <li class="list-group-item">
                <div class="card mb-3" style="max-width: 780;">
                    <div class="card-body">
                        <h5 class="card-title">Name</h5>
                        <p class="card-text">Group Size: Gender(s): [Male,Female,Both] </p>
                        <p class="card-text">Languages: ... #Havekids #</p>
                    </div>
                </div>
            </li>
    }
</ul>